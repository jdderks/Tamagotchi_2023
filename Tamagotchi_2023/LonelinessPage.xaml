<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi_2023.LonelinessPage"
             Title="LonelinessPage">
    <StackLayout HorizontalOptions="Center">
        <Image Source="Images/gremlin.png"
               HeightRequest="300"
               HorizontalOptions="Center" />
        <Label Text="Loneliness" FontSize="18" Padding="0,10,0,0" HorizontalOptions="Center"/>
        <ProgressBar Progress="{Binding ProgressBarValue}" ProgressColor="Black" WidthRequest="300"/>
        <Label Text="When you have the app open the gremlin gets less lonely :)" FontSize="18" Padding="10,10,10,10" />
    </StackLayout>
</ContentPage>