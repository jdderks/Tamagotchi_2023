<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi_2023.ThirstPage"
             xmlns:local="clr-namespace:Tamagotchi_2023" 
             x:DataType="local:ThirstPage">



    <VerticalStackLayout
            Spacing="25"
            Padding="30,0">
    <!--<local:HungerView/>-->
        
        <Image Source="Images/gremlin.png"
               HeightRequest="300"
               HorizontalOptions="Center" />

        <local:HungerView />

        <Label Text="{Binding FlavourText}"
               VerticalOptions="Center" 
               HorizontalOptions="Center"/>
        <Button Text="Give water" Clicked="Button_Clicked" />
        
        
    </VerticalStackLayout>
</ContentPage>